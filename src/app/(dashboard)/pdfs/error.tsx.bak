'use client';

import { useEffect } from 'react';

export default function Error({
    error,
    reset,
}: {
    error: Error & { digest?: string };
    reset: () => void;
}) {
    useEffect(() => {
        // Log the error to an error reporting service
        console.error('PDF Library Error:', error);
    }, [error]);

    return (
        <div className="flex flex-col items-center justify-center min-h-[400px] p-8 text-center bg-white rounded-lg border-2 border-red-50 border-dashed">
            <h2 className="text-xl font-bold text-red-600 mb-2">Something went wrong!</h2>
            <p className="text-slate-600 mb-6 max-w-md">
                We couldn't load your PDF library. {error.message === 'fetch failed' ? 'Could not connect to the database.' : 'An unexpected error occurred.'}
            </p>

            <div className="flex gap-4">
                <button
                    onClick={() => reset()}
                    className="px-4 py-2 bg-slate-900 text-white rounded-md hover:bg-slate-800 transition-colors"
                >
                    Try again
                </button>
                <button
                    onClick={() => window.location.href = '/'}
                    className="px-4 py-2 bg-white border border-slate-300 rounded-md hover:bg-slate-50 transition-colors"
                >
                    Go Home
                </button>
            </div>

            {process.env.NODE_ENV === 'development' && (
                <div className="mt-8 p-4 bg-slate-100 rounded text-left overflow-auto max-w-full text-xs font-mono">
                    <p className="font-bold mb-1">Error Details:</p>
                    {error.message}
                    {error.stack && <pre className="mt-2 text-slate-500">{error.stack}</pre>}
                </div>
            )}
        </div>
    );
}
